= DesignBox.boxt(_("Results"), "350px")
%table.list
  %thead
    %tr
      %th=_("Name")
  %tbody
    - count = 0
    - users.each do |user|
      - next if !can?(:show, user)
      - count += 1
      %tr
        %td
          - if params[:jscallback].present?
            = link_to user.name!, "javascript: #{params[:jscallback]}(#{user.id})"
          - else
            = link_to_user user

    - if count <= 0
      %tr
        %td{colspan: 1, class: "error"}
          =_("No users were found.")

= DesignBox.boxb
