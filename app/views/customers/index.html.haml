- content_for(:header_title){ _("Search for customers") }

= DesignBox.boxt _("Enter criteria"), 350
= simple_search_form_for @ransack, @ransack_params do |f|
  = f.input :name_cont
  = link_to _("Add new customer"), new_customer_path, :class => "button"
  = f.submit _("Search")
= DesignBox.boxb

%br/

= DesignBox.boxt _("Results"), 500
%table.list
  %thead
    %tr
      %th= sort_link @ransack, :name
      %th= sort_link @ransack, :email
  %tbody
    - @customers.each do |customer|
      %tr
        %td= link_to_customer customer
        %td= mail_to customer.email if customer.email.present?
    - if @customers.none?
      %tr
        %td{:colspan => 1, :class => "error"}
          = _("No customers were found.")
= DesignBox.boxb

%br/

= will_paginate @customers
