- if controller_name != 'sessions'
  = link_to _("Sign in"), new_session_path(resource_name), class: "mobile-button"
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to _("Sign up"), new_registration_path(resource_name), class: "mobile-button"
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to _("Forgot your password?"), new_password_path(resource_name), class: "mobile-button"
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to _("Didn't receive confirmation instructions?"), new_confirmation_path(resource_name), class: "mobile-button"
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to _("Didn't receive unlock instructions?"), new_unlock_path(resource_name), class: "mobile-button"
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to _("Sign in with %{provider_title}", provider_title: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), class: "mobile-button"
