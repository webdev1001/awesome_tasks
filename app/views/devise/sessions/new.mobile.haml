- content_for(:header_title) { t(".sign_in") }

= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.input :email, required: false, autofocus: true
  = f.input :password, required: false, label: t(".password")
  = f.input :remember_me, as: :boolean, label: t(".remember_me") if devise_mapping.rememberable?
  = f.button :submit, t(".sign_in"), class: "mobile-button-primary"

= render "devise/shared/links"
