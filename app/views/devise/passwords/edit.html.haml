- content_for(:header_title){ t(".change_your_password") }

= design_box t("enter_details"), 650 do
  = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: {method: :put} do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    = f.input :password, label: t(".new_password"), required: true, autofocus: true
    = f.input :password_confirmation, label: t(".confirm_your_new_password"), required: true
    = f.button :submit, t(".change_my_password")

%br
= render "devise/shared/links"
