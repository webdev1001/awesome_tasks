= simple_form_for timelog do |f|
  = f.input :task_id, collection: Task.order(:id), include_blank: true
  = f.input :time
  = f.input :time_transport
  = f.input :transport_length
  = f.input :date
  = f.input :invoiced
  = f.input :comment
  = f.submit _("Save"), class: ["mobile-button", "mobile-button-primary"]

  - if can?(:destroy, timelog) && !timelog.new_record?
    = link_to _("Delete"), timelog, method: :delete, class: ["mobile-button", "mobile-button-danger"], data: {confirm: _("Are you sure?")}
