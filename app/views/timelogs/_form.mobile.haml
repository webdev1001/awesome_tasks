= simple_form_for timelog do |f|
  = f.input :task_id, collection: Task.order(:id), include_blank: true
  = f.input :time
  = f.input :time_transport
  = f.input :transport_length
  = f.input :date
  = f.input :invoiced
  = f.input :comment
  = f.submit t("save"), class: "mobile-button-primary"

  - if can?(:destroy, timelog) && !timelog.new_record?
    = link_to t("delete"), timelog, method: :delete, class: "mobile-button-danger", data: {confirm: t("are_you_sure")}
