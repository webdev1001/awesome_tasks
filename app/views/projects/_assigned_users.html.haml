%table.list
  %thead
    %tr
      %th= _"User"
      - if can?(:admin, :admin)
        %th= _"Actions"
  %tbody
    - @project.user_project_links.joins(:user).order("users.name").each do |link|
      %tr
        %td
          = link_to_user link.user
        %td
          (
          %a{:href => "javascript: if (confirm('#{_"Do you want to remove this user from the project?"}')){project_remove_assigned_user('#{link.id}');}"}>= _"remove"
          )
    - if @project.users.none?
      %tr
        %td.error{:colspan => "1"}
          = _"No users were found."
