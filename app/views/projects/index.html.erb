<%
  if !can?(:admin, :admin)
    flash[:warning] = (_("You do not have permission to view this page."))
    redirect_to :back
  end
  
  print _site.header(_("Search for project"))
%>

<form method="get">
<%=Knj::Web.hiddens([{:name => :show, :value => :project_search}, {:name => :choice, :value => :dosearch}])%>

<%=DesignBox.boxt(_("Enter criteria"), "350px")%>
  <table class="form">
    <%
      print Knj::Web.inputs([{
        :title => _("Name"),
        :name => :texname,
        :value => params["texname"],
        :descr => _("A part of the name of the project you are looking for.")
      }])
    %>
    <tr>
      <td colspan="2" class="buttons">
        <input type="button" value="<%=_("Add new")%>" onclick="location.href='?show=project_edit';" />
        <input type="submit" value="<%=_("Search")%>" />
      </td>
    </tr>
  </table>
<%=DesignBox.boxb%>

</form>

<script type="text/javascript">
  $("#texname").focus();
</script>

<%
  if params["choice"] == "dosearch"
    args = {"orderby" => "name"}
    
    if params["texname"].to_s.length > 0
      args["name_search"] = params["texname"]
    end
    
    projects = _ob.list(:Project, args)
    
    %>
      <br />
      
      <%=DesignBox.boxt("Projects", "500px")%>
        <table class="form">
          <thead>
            <tr>
              <th><%=_("Name")%></th>
            </tr>
          </thead>
          <tbody>
            <%
              projects.each do |project|
                %>
                  <tr>
                    <td>
                      <%=project.html%>
                    </td>
                  </tr>
                <%
              end
              
              if projects.empty?
                %>
                  <tr>
                    <td colspan="1" class="error">
                      <%=_("No projects were found.")%>
                    </td>
                  </tr>
                <%
              end
            %>
          </tbody>
        </table>
      <%=DesignBox.boxb%>
    <%
  end
%>